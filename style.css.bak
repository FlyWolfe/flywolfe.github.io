* { 
	box-sizing: border-box;
}
html, body {
	min-height: 100%;
	background: #0D0E17;
	color: #DDDDDD;
}
	
body {
	font-size: 1.4rem;
	text-rendering: optimizeLegibility;
}
	
body, ul, ol, dl {
	margin: 0;
}
article, aside, audio, 
footer, header, nav, section, video {
	display: block; 
	}
	
h1 {
	font-size: 1.4rem;
}
	
p { 
	-ms-word-break: break-all;
	word-break: break-all;
	word-break: break-word;
	-moz-hyphens: auto;
	-webkit-hyphens: auto;
	-ms-hyphens: auto;
	hyphens: auto;
	width: 500px;
	text-align: center;
}
	
textarea { 
	resize: vertical;
}
 
table { border-collapse: collapse; }
td {
	padding: .5rem;
}
	
img { 
	border: none;
	max-width: 100%;
}
	
input[type="submit"]::-moz-focus-inner, 
	input[type="button"]::-moz-focus-inner {
		border : 0px;
	}
	
input[type="search"] { 
	-webkit-appearance: textfield;
} 
input[type="submit"] { 
	-webkit-appearance:none;
}
	
input:required:after {
	color: #f00;
	content: " *";
}
input[type="email"]:invalid { 
	background: #f00;
}
	
.right { 
	float: right;
	margin-left: 2rem;
	clear: right;
}
.left { 
	float: left;
	margin-right: 2rem;
	clear: left;
}
	
sub, sup { 
	line-height: 0;
}
	
.container {
  font-family: arial;
  font-size: 24px;
  margin: 25px;
  width: auto;
  height: auto;
  outline: dashed 1px black;
}

.child {
  width: 50px;
  height: 50px;
  /* Center horizontally*/
  margin: 0 auto;
}
